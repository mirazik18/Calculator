<Window x:Class="SecondMeet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecondMeet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <UniformGrid  Name="Numbers"  Margin="0,89,179,0" >
            <Border Background="AliceBlue" Grid.ColumnSpan="2">
                <Button Click="Button_Click"  Content="1"  />
            </Border>
            <Border Background="Cornsilk">
                <Button Click="Button_Click_1"  Content="2"/>
            </Border>
            <Border Background="DarkSalmon">
                <Button Click="Button_Click_2"  Content="3"/>
            </Border>
            <Border Background="Gainsboro" Grid.RowSpan="2">
                <Button Click="Button_Click_3"  Content="4"/>
            </Border>
            <Border Background="LightBlue">
                <Button Click="Button_Click_4"  Content="5"/>
            </Border>
            <Border Background="MediumAquamarine">
                <Button  Click="Button_Click_5"  Content="6"/>
            </Border>
            <Border Background="MistyRose">
                <Button Click="Button_Click_6"  Content="7"/>
            </Border>
            <Border Background="Cyan">
                <Button Click="Button_Click_7"  Content="8"/>
            </Border>
            <Border Background="Violet">
