            </Border>
            <Border Background="Violet">
                <Button Click="Button_Click_9"  Content="0"/>
            </Border>
            <Border Background="Violet">
                <Button Click="Button_Click_15"  Content="C"/>
            </Border>
        </UniformGrid>
        <UniformGrid Margin="618,0,0,0">
            <Border Background="Black" Margin="0,0,58,130">
                <Button Foreground="White" Click="Button_Click_10" FontSize="40" Content="+"/>
              
