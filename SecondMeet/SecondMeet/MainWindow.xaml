            </Border>
            <Border Background="Black" Margin="0,106,58,-3">
                <Button Click="Button_Click_12"  Foreground="White" FontSize="40" Content="*"/>

            </Border>
            <Border Background="Black" Margin="-87,18,145,120">
                <Button Click="Button_Click_13" Foreground="White" FontSize="40" Content="/"/>

            </Border>

        </UniformGrid>
        <TextBox IsReadOnly="True" FontSize="40" Foreground="Black" Name="Answer"  Margin="0,0,190,346"/>
        <Button Click="Button_Click_14"  Foreground="White" FontSize="40" Content="=" Margin="678,19,28,342"/>
    </Grid>
